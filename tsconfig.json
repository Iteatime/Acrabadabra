{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "inlineSourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@model/*": ["src/app/shared/models/*"],
      "@services/*": ["src/app/shared/services/*"],
      "@directives/*": ["src/app/shared/directives/*"]
    },
    "target": "es2015",
    "types": [
      "node"
    ],
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
